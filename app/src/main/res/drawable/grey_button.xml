<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true" >
        <shape>
            <gradient
                android:endColor="#aaaaaa"
                android:centerColor="#dddddd"
                android:startColor="#aaaaaa"
                android:angle="270" />
            <stroke
                android:width="@dimen/_1sdp"
                android:color="#555555" />
            <corners
                android:radius="3dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>

    <item android:state_focused="true" >
        <shape>
            <gradient
                android:endColor="#0000ff"
                android:startColor="#0000ff"
                android:angle="270" />
            <stroke
                android:width="@dimen/_1sdp"
                android:color="#b3b3b3" />
            <corners
                android:radius="3dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>

    <item>
        <shape>
            <gradient
                android:endColor="#777777"
                android:centerColor="#aaaaaa"
                android:startColor="#777777"
                android:angle="270" />
            <stroke
                android:width="@dimen/_1sdp"
                android:color="#555555" />
            <corners
                android:radius="3dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
</selector>